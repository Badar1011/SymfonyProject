{% extends 'BookReviewBundle::layout.html.twig' %}

{% block title %}BookReviewBundle:BookReview:createbook{% endblock %}

{% block body %}
    <h1>Welcome to the Book:create page</h1>
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.title, 'Enter the Book Title',{'attr': {'for': 'title'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control input-lg', 'id': 'title', 'placeholder': 'Enter the Book Title', 'required': 'required'}}) }}
        <small id="titleHelp" class="form-text text-muted">{{ form_errors(form.title) }}</small>
    </div>
    <div class="form-group">
        {{ form_label(form.bookauthor, 'Enter the Book Author',{'attr': {'for': 'author'}}) }}
        {{ form_widget(form.bookauthor, {'attr': {'class': 'form-control input-lg', 'id': 'author', 'placeholder': 'Enter the Book Author', 'required': 'required'}}) }}
        <small id="authorHelp" class="form-text text-muted">{{ form_errors(form.bookauthor) }}</small>
    </div>
    <div class="form-group">
        {{ form_label(form.summary, 'Enter the summary',{'attr': {'for': 'summary'}}) }}
        {{ form_widget(form.summary, {'attr': {'class': 'form-control input-lg', 'maxlength': '500', 'id': 'summary', 'placeholder': 'Enter the Book summary', 'required': 'required'}}) }}
        <small id="summaryHelp" class="form-text text-muted">{{ form_errors(form.summary) }}</small>
    </div>
    <div class="form-group">
        {{ form_label(form.isbn, 'Enter the ISBN number',{'attr': {'for': 'isbn'}}) }}
        {{ form_widget(form.isbn, {'attr': {'class': 'form-control input-lg', 'id': 'isbn', 'placeholder': 'Enter the ISBN number', 'required': 'required'}}) }}
        <small id="isbnHelp" class="form-text text-muted">{{ form_errors(form.isbn) }}</small>
    </div>
    <div class="form-group">
        {{ form_label(form.image, 'Select an image',{'attr': {'for': 'image'}}) }}
        {{ form_widget(form.image, {'attr': {'class': 'form-control input-lg', 'id': 'image', 'placeholder': 'Select the book cover', 'required': 'required'}}) }}
        <small id="imageHelp" class="form-text text-muted">{{ form_errors(form.image) }}</small>
    </div>
    {{ form_widget(form.submit, {'attr': {'class': 'btn btn-lg btn-primary'}}) }}
    {{ form_end(form) }}
{% endblock %}

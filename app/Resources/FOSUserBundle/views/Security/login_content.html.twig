{% trans_default_domain 'FOSUserBundle' %}

<h1>Login</h1>
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


<form name="loginForm" action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
        <label for="username">{{ 'security.login.username'|trans }}</label>
        <div class="col-sm-10">
            <input type="text" placeholder="Enter your email" class="form-control input-lgl" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username">
        </div>
    </div>
    <div class="form-group">
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <div class="col-sm-10">
            <input id="password" name="_password" required="required" autocomplete="current-password" type="password" class="form-control input-lg"  placeholder="Password">
        </div>
    </div>
    <div class="form-check" style="padding-left: 20%">
        <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me" value="on" />
        <label class="form-check-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        <br>
        <a href="{{ path('fos_user_resetting_request') }}" class="alert-link">Forgot my password!</a>
    </div>
    <input name="submit" type="submit" class="btn btn-lg btn-primary" value="{{ 'security.login.submit'|trans }}">
</form>




